# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true

# Applications
bind b:cmd;alt;ctrl;shift focus 'Google Chrome'
bind e:cmd;alt;ctrl;shift focus 'Sublime Text'
bind t:cmd;alt;ctrl;shift focus 'iTerm'
bind g:cmd;alt;ctrl;shift focus 'Tower'

# Monitor Aliases
alias mon-mbp15       1440x900   # mbp15-internal
alias mon-dell        1650x1050  # dell

# Aliases
alias 1-main  move screenOriginX;screenOriginY                  screenSizeX;2*screenSizeY/3  ${mon-dell}
alias 1-sub   move screenOriginX;screenOriginY+2*screenSizeY/3  screenSizeX;1*screenSizeY/3  ${mon-dell}

# Applications
layout sophos 'Google Chrome':REPEAT                   ${1-main}
layout sophos 'Tower':REPEAT                           ${1-main}
layout sophos 'Sublime Text':REPEAT                    ${1-main}
layout sophos 'iTerm':REPEAT                           ${1-sub}

# Layouts
default sophos resolutions:${mon-dell};${mon-dell};${mon-mbp15}

# Layout Bindings
bind padEnter:ctrl layout sophos

# Window Hints
bind esc:cmd hint

# Grid
bind c:cmd;alt;ctrl;shift grid padding:10 0:6,6 1:6,6 2:6,6

# Full-Screen
bind return:cmd;alt;ctrl;shift corner top-left resize:screenSizeX;screenSizeY

# Bindings to throw windows from one screen to another
bind 1:cmd;alt;ctrl;shift         throw 0 resize
bind 2:cmd;alt;ctrl;shift         throw 1 resize
bind 3:cmd;alt;ctrl;shift         throw 2 resize
bind right:cmd;alt;ctrl;shift     throw right
bind left:cmd;alt;ctrl;shift      throw left
bind up:cmd;alt;ctrl;shift        throw up
bind down:cmd;alt;ctrl;shift      throw down

# Bindings to push windows within a screen
bind left:cmd;ctrl                push left
bind right:cmd;ctrl               push right

# Bindings to save layouts
bind i:cmd;alt;ctrl;shift snapshot          snapOne save-to-disk
bind k:cmd;alt;ctrl;shift activate-snapshot snapOne
bind o:cmd;alt;ctrl;shift snapshot          snapTwo save-to-disk
bind l:cmd;alt;ctrl;shift activate-snapshot snapTwo
