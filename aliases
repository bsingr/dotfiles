# git
alias gitx='gittower'
alias git-purge-remote="git branch -r --merged | grep -v master | sed 's/origin\///' | xargs -n 1 git push --delete origin"

# commands
alias ll='ls -laFG'
alias less='less -r'
alias grep='grep --color'

# linux compatibility, install via brew install gnu-tar
alias tar='gtar'

# dotfile editing
alias dote='pushd ~/dev/dotfiles && $EDITOR . && gitx && popd'
alias bp='$EDITOR ~/.bash_profile'

# editor
alias ee='$EDITOR .'
alias e='$EDITOR'

# ruby
alias be='bundle exec'
alias bu='bundle update'

# public ip
alias ipub='dig +short myip.opendns.com @resolver1.opendns.com'

