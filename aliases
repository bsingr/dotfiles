# git
alias gitx='gittower'
#alias subl='choc'

# commands
alias ll='ls -laG'
alias less='less -r'
alias grep='grep --color'

# dotfile editing
alias dote='pushd ~/dev/dotfiles && $EDITOR . && gitx && popd'
alias bp='$EDITOR ~/.bash_profile'

# ruby
alias be='bundle exec'
alias bu='bundle update'

# jruby
alias xng='JRUBY_OPTS="" jruby --ng-server'
alias xspork='jruby --ng -S spork'
alias xspec='jruby --ng -S bundle exec rspec --drb'

# go
alias gd='fdd $GOPATH'
alias fd='fdd $HOME'

# public ip
alias ipub='dig +short myip.opendns.com @resolver1.opendns.com'
